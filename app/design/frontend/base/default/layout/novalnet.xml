<layout version="0.1.0">
    <novalnet_payment_callback_index>
        <reference name="root">
            <remove name="global_notices"/>
            <remove name="header"/>
            <remove name="right"/>
            <remove name="left"/>
            <remove name="footer"/>
        </reference>
    </novalnet_payment_callback_index>
    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/novalnet/novalnet.css</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/cc.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/sepa.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/paypal.js</name>
            </action>
        </reference>
    </checkout_onepage_index>
    <checkout_onestep_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/novalnet/novalnet.css</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/cc.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/sepa.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/paypal.js</name>
            </action>
        </reference>
    </checkout_onestep_index>
    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/novalnet/novalnet.css</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/cc.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/sepa.js</name>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>novalnet/paypal.js</name>
            </action>
        </reference>
    </onestepcheckout_index_index>
    <checkout_onepage_success>
        <reference name="content">
            <block type="checkout/onepage_success" name="success_page" template="novalnet/method/info/CashpaymentSuccess.phtml" />
        </reference>
    </checkout_onepage_success>
</layout>
